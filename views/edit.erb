<div class="container editContainer">
  <h2>
    Edit Hub Post
  </h2>

  <div class="row">
    <div class="col-lg-12">Testing

    </div>
    <div class="row">
      <div class="col-lg-12">
        <form action="/edit/<%= @blog.id %>" method="POST">
          <input type="text" name="name" class="form-control" value=" <%= @blog.name %> ">
          <textarea name="description" class="form-control">
            <%= @blog.description %>
          </textarea>

          <input type="submit" class="btn btn-primary" value="submit">
        </form>
      </div>
    </div>
  </div>
</div>
