<div class="container editContainer">
  <h2 class="editText py-3">
    Edit Hub Post
  </h2>
  <div class="row">
    <div class="col-lg-12 tuxLaptopImgCol">
      <img src="/tuxLaptop.png">
    </div>
  </div>
  <div class="row editMainRow text-left">
    <div class="col-lg-12">
      Post Name:
      <form action="/edit/<%= @blog.id %>" method="POST">
        <input type="text" name="name" class="form-control inputBox" value=" <%= @blog.name %> ">

        Post Description:
        <textarea name="description" class="form-control inputBox" rows="15">
          <%= @blog.description %>
        </textarea>

        <div class="row py-3">
          <div class="col-lg-12 text-center">

            <button type="submit" class="buttonCustomize">Submit Changes
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
